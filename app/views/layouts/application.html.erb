<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-debug</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/42a4d3a197.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="body">
     <div class="container">
        <div class="row">
            <div class="col-md-12">
              <div class="search-form">
              <% if user_signed_in? %>
                  <%= form_tag(search_path, method: :get) do %>
                  <%= text_field_tag 'search[content]' %>
                  <%= select_tag 'search[model]', options_for_select({"User"=>"user","Book"=> "book"}) %>
                  <%= select_tag 'search[how]', options_for_select({"完全一致"=> "match", "前方一致"=>"forward", "後方一致"=> "backward", "部分一致"=> "partical"}) %>
                  <%= submit_tag '検索'%>
                  <% end %>
              <% end %>
              </div>
            </div>
        </div>
     </div>
     <div class="container">
       <p id="notice"><%= notice %></p>
       <div class="row">
          <%= yield %>
       </div>
     </div>
   </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
